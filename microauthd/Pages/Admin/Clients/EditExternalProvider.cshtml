@page "/Admin/Clients/EditExternalProvider"
@model microauthd.Pages.Admin.Clients.EditExternalProviderModel
@{
    ViewData["Title"] = "Edit External Provider";
    Layout = "_Layout";
}

<h2 class="mb-4">Edit External Identity Provider</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Form.Id" />
    <input type="hidden" asp-for="Form.ClientId" />

    <div class="mb-3">
        <label asp-for="Form.ProviderKey" class="form-label"></label>
        <input asp-for="Form.ProviderKey" class="form-control w-50" />
        <span asp-validation-for="Form.ProviderKey" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.DisplayName" class="form-label"></label>
        <input asp-for="Form.DisplayName" class="form-control w-50" />
        <span asp-validation-for="Form.DisplayName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Issuer" class="form-label"></label>
        <input asp-for="Form.Issuer" class="form-control w-50" />
        <span asp-validation-for="Form.Issuer" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.ClientIdentifier" class="form-label"></label>
        <input asp-for="Form.ClientIdentifier" class="form-control w-50" />
        <span asp-validation-for="Form.ClientIdentifier" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Scopes" class="form-label"></label>
        <input asp-for="Form.Scopes" class="form-control w-50" />
        <span asp-validation-for="Form.Scopes" class="text-danger"></span>
    </div>

    <div class="mt-4 d-flex justify-content-start">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Admin/Clients/ExternalProviders" asp-route-clientId="@Model.Form.ClientId" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

