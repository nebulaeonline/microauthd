@page
@model microauthd.Pages.DashboardModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">System Overview</h2>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-bg-dark">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text display-6 d-flex justify-content-between align-items-end">
                    @Model.UserCount
                    <small>(@Model.InactiveUserCount inactive)</small>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-dark">
            <div class="card-body">
                <h5 class="card-title">Roles</h5>
                <p class="card-text display-6">@Model.RoleCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-dark">
            <div class="card-body">
                <h5 class="card-title">Clients</h5>
                <p class="card-text display-6">@Model.ClientCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-dark">
            <div class="card-body">
                <h5 class="card-title">Scopes</h5>
                <p class="card-text display-6">@Model.ScopeCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-dark">
            <div class="card-body">
                <h5 class="card-title">Active Sessions</h5>
                <p class="card-text display-6">@Model.ActiveSessionCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-dark">
            <div class="card-body">
                <h5 class="card-title">Audit Logs</h5>
                <p class="card-text display-6">@Model.AuditLogCount</p>
            </div>
        </div>
    </div>
</div>

